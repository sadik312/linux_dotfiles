# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[volume]
command=~/.config/i3blocks/scripts/vol/volume
#LABEL=♪ 
LABEL= 
interval=1
signal=10
#STEP=5%

[memory]
command=~/.config/i3blocks/scripts/mem/memory
label= 
interval=30
min_width=: 100.00%

[memory]
label=SWAP
interval=30

[cpu_usage]
command= ~/.config/i3blocks/scripts/cpu/cpu_usage
interval=10
LABEL= 

[temperature]
command= ~/.config/i3blocks/scripts/temp/temperature
label= 
interval=30

[battery]
command= ~/.config/i3blocks/scripts/battery/battery2
markup=pango
interval=30

[time]
command=date '+%Y-%m-%d %H:%M:%S '
interval=1
