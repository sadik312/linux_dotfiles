# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[wifi]
command=~/.config/i3blocks/i3blocks-contrib/wifi/wifi
label= 
interval=60

[volume]
command=~/.config/i3blocks/i3blocks-contrib/volume/volume
LABEL= 
interval=1
signal=1

[disk]
command=~/.config/i3blocks/i3blocks-contrib/disk/storage
label= 
interval=30


[cpu_usage]
command=~/.config/i3blocks/i3blocks-contrib/cpu_usage/cpu
interval=10
LABEL= 

[memory]
command=~/.config/i3blocks/i3blocks-contrib/memory/mem
label= 
interval=30

[battery]
command=~/.config/i3blocks/i3blocks-contrib/battery/bat_prog
interval=30
LABEL=⚡ 

[xkb_layout]
command=~/.config/i3blocks/i3blocks-contrib/xkb_layout/xkb_switch
font=monospace
font_weight=bold
interval=persist
markup=pango

[calendar]
command=~/.config/i3blocks/i3blocks-contrib/calendar/cal
interval=1
LABEL= 
DATEFMT=+%Y-%m-%d %H:%M:%S
